<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Help / Feedback"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            fontPath="fonts/Comfortaa-Regular.ttf" />

        <ImageView
            android:id="@+id/backIconIMG"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_above="@+id/submitFeedbackBTN"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Weâ€™d love to hear from you.  Please leave your questions, comments and concerns below:"
            fontPath="fonts/Comfortaa-Regular.ttf"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.5"/>

        <EditText
            android:id="@+id/sendFeedBackMessageET"
            fontPath="fonts/Comfortaa-Regular.ttf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:gravity="top"
            android:hint="Please provide your message here."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitFeedbackBTN"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/loginbtn"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Submit Feedback"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        fontPath="fonts/Comfortaa-Regular.ttf"
        android:textSize="20sp" />
</RelativeLayout>
